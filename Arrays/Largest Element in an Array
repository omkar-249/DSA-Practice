class Solution {
    public int maxProduct(int[] nums) {
        int max=Integer.MIN_VALUE, secondMax=Integer.MIN_VALUE;
        for(int i=0; i<nums.length; i++){
            if(secondMax <= nums[i]){
                if(max <= nums[i]){
                    secondMax = max;
                    max = nums[i];
                }else{
                    secondMax = nums[i];    
                }
            }
        }
        int temp = --max * --secondMax;
        System.out.println("Max " + max + " SecondMax : " + secondMax + " Result : " + temp);
        return temp;
    }
}

